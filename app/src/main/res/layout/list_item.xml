<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right"
        android:id="@+id/listItemImageView"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/listItemImageView">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listItemNameTextView"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/padding_left_and_right"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listItemPhoneTextView"
            android:paddingLeft="@dimen/padding_left_and_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/listItemColorView"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>

</RelativeLayout>